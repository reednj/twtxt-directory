	<% if defined? _js %>
	<script type='text/javascript'>
		_js = <%== _js.to_json %>;
	</script>
	<% end %>

	<%== yield_content :header %>

</head>

<body>

<div id="content">

	<div id='header'>
		<span>
			<a href='/'>user directory</a> for <a href='https://github.com/buckket/twtxt'>twtxt</a>
		<span>
		<span class='wide-only' style='float: right;'>
			<a href='http://twitter.com/reednj'>@reednj</a> | 
			<a href='https://github.com/reednj/twtxt-directory'><%= settings.version %></a>
		</span>
	</div>
	
	<%== yield_content :body %>

</div>

